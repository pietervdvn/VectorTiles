{
	"name": "Buildings",
	"description": "Basic buildings",
	"minzoom": 15,
	"first-selection":[
		{"landuse":"*"},
		{"leisure": ["park", "garden"]}
	]
	,
	"styles": {
		"building":{
			"fillcolor":"#D9D0C9",
			"linecolor":"#C6BAB1"
		},
		"school": {
			"base": "building",
			"fillcolor": "#b5ae6a"
		},
		"showName": {
			"text": "$(name)",
			"font": "sans-serif",
			"fonteffect": "bold",
			"fontsize":	12,
			"fontcolor": "#000000"
	   }
	},

	"styling": {
		"building":{
			"school": "school",
			"college": "school",
			"university":"school",
			"*" : "building"
		},
		"name":{
			"*":"showName"
		}
	}
}
